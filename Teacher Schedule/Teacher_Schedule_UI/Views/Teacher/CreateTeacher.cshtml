@model CreateTeachersDto
@{
    ViewData["Title"] = "CreateTeacher";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Öğretmen Ekleme Sayfası</h6>
