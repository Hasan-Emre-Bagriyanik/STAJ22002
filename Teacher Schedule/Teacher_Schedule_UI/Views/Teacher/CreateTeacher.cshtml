                    <label>Öğretmen Soyadı</label>
                    <input type="text" asp-for="LastName" class="form-control" />
                    <br />
                    <label>Branş Adı</label>
                    <input type="text" asp-for="Branch" class="form-control" />
                    <br />
                    <label>Haftalık Çalışma Saati</label>
                    <input type="text" asp-for="WeeklyHours" class="form-control" />
                    <br />
                    <label>Öğretmen Resim URl</label>
                    <input type="text" asp-for="Image" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Öğretmeni Kaydet</button>
                </form>
            </div>
        </div>
    </div>
