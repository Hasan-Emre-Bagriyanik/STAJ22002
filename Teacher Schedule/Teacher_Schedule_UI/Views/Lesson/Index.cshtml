@model List<ResultLessonDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    var count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Ders Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ders Adı</th>
                                <th scope="col">Branşı</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td><img src="@item.Image" height="50" width="50" /> @item.LessonName</td>
                                    <td>@item.Branch</td>                                  
                                    <td><a href="/Lesson/DeleteLesson/@item.LessonID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Lesson/UpdateLesson/@item.LessonID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Lesson/CreateLesson/" class="btn btn-outline-info">Yeni Ders Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
