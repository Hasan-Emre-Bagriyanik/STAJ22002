 @model List<Teacher_Schedule_UI.Dtos.ScheduleDtos.GetByIDScheduleDto>
 @{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Teacher/Views/LayoutTeacher/Index.cshtml";
    var count = 0;
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Ders Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Adı Soyadı</th>
                                <th scope="col">Ders Adı</th>
                                <th scope="col">Haftanın Günü</th>
                                <th scope="col">Dersin Başlama Tarihi</th>
                                <th scope="col">Dersin Bitiş Tarihi</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.TeacherName</td>
                                    <td>@item.LessonName</td>
                                    <td>@item.DayOfWeek</td>
                                    <td>@item.StartTime</td>
                                    <td>@item.EndTime</td>
                                    <td></td>

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
 


